---
import Base from "./layouts/base.astro";

import star_surfer from "/img/star_surfer.jpg";
---

<Base>
    <main>
        <div>
            <img src={star_surfer} alt="" />
            <a href="/collections/surfer"></a>
            <span>Surfer</span>
        </div>
    </main>
</Base>

<style>
    main {
        padding: 2rem;
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(min(100%, 40rem), 1fr));
    }

    img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        aspect-ratio: 16 / 10;
    }

    div {
        position: relative;
        display: grid;
        place-items: center;
        overflow: hidden;
    }

    div a::after {
        content: "";
        position: absolute;
        inset: 0;
    }

    div > * {
        grid-area: 1 / 2;
    }

    div span {
        font-size: 15vh;
        opacity: 0;
        transform: scale(0.8);
        font-weight: bolder;
        color: white;
        background-image: linear-gradient(to right, rgb(182, 244, 146), rgb(51, 139, 147));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        pointer-events: none;
    }

    div:hover span {
        opacity: 1;
        transform: scale(1);
        transition: all 0.1s ease-in;
    }

    @media only screen and (max-width: 600px) {
		div span {
            font-size: 9vh;
        }
	}
</style>
